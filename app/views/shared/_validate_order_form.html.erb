<%= form_tag(panel_validation_path, { class: 'form-inline' }) do %>
  <%= text_field_tag :code, '', placeholder: '9999999999', class: 'form-control form-control-sm mb-2 mr-sm-2', autofocus: true %>
  <%= hidden_field_tag :order_id, order_id %>
  <%= hidden_field_tag :favoured, favoured %>
  <%= submit_tag 'Validate', class: 'btn btn-sm btn-primary mb-2' %>
<% end %>